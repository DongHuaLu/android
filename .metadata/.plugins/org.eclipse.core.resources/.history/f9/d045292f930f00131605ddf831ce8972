package com.example.db;
import android.content.Context;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;

public class ProcessSQLiteIOpenHelper extends SQLiteOpenHelper {
	
	private static ProcessSQLiteIOpenHelper mInstance;

	
    public synchronized static ProcessSQLiteIOpenHelper getInstance(Context context) {
        if (mInstance == null) {
                mInstance = new ProcessSQLiteIOpenHelper(context);
        }
        return mInstance;
}

	@Override
	public void onCreate(SQLiteDatabase db) {
		db.execSQL("CREATE TABLE process (id integer primary key autoincrement,threadid integer,total integer)");
	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
	}

}
